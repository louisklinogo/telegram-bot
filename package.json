{
  "name": "cimantikos-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot for Cimantikós Clothing Company - Invoice generation and measurement tracking",
  "main": "src/server.ts",
  "scripts": {
    "dev": "mastra dev",
    "dev:webhook": "npx tsx src/webhook-server.ts",
    "dev:both": "concurrently \"npm run dev\" \"npm run dev:webhook\"",
    "build": "tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "audit": "npm audit",
    "audit-fix": "npm audit fix"
  },
  "dependencies": {
    "@ai-sdk/google": "latest",
    "@hono/node-server": "^1.19.4",
    "@mastra/core": "latest",
    "@mastra/libsql": "^0.14.3",
    "@mastra/loggers": "latest",
    "@mastra/mcp": "latest",
    "@mastra/memory": "latest",
    "@notionhq/client": "^2.2.15",
    "dotenv": "^16.4.5",
    "grammy": "^1.34.1",
    "pdf-parse": "^1.1.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "mastra": "^0.13.2",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "jsondiffpatch": "^0.7.2",
    "nanoid": "^3.3.8"
  },
  "keywords": [
    "telegram",
    "bot",
    "invoice",
    "notion",
    "mastra",
    "clothing",
    "measurements"
  ],
  "author": "Cimantikós Clothing Company",
  "license": "MIT"
}
