{
  "name": "cimantikos-platform",
  "private": true,
  "packageManager": "bun@latest",
  "workspaces": [
    "apps/admin",
    "apps/api",
    "apps/worker",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run dev:api & bun run dev:admin",
    "dev:api": "bun --hot apps/api/src/index.ts",
    "dev:worker": "bun --hot apps/worker/src/index.ts",
    "dev:admin": "cd apps/admin && bun run dev",
    "build:admin": "cd apps/admin && bun run build",
    "build:api": "cd apps/api && bun run build",
    "lint": "bunx --bun biome check apps packages scripts docs",
    "format": "bunx --bun biome format --write .",
    "typecheck": "bun run typecheck:admin && bun run typecheck:api",
    "typecheck:admin": "cd apps/admin && tsc --noEmit",
    "typecheck:api": "cd apps/api && tsc --noEmit",
    "verify:rls": "bun scripts/verify-rls.ts",
    "db:types": "supabase gen types typescript --project-id zvatkstmsyuytbajzuvn > packages/supabase/src/types/database.generated.ts",
    "db:types:generated": "supabase gen types typescript --project-id zvatkstmsyuytbajzuvn > packages/supabase/src/types/database.generated.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.5",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "react-dropzone": "^14.3.8",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "husky": "^9.1.6",
    "supabase": "^2.48.3",
    "next": "15.5.4",
    "ultracite": "^5.5.0"
  }
}
