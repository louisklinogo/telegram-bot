{
  "name": "cimantikos-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot for Cimantikós Clothing Company - Invoice generation and measurement tracking",
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "dev": "mastra dev",
    "dev:webhook": "bunx tsx src/webhook-server.ts",
    "dev:both": "concurrently \"bun run dev\" \"bun src/server.ts\"",
    "build": "tsc -p tsconfig.build.json",
    "start": "bun dist/server.js",
    "type-check": "tsc --noEmit",
    "audit": "bun audit",
    "audit-fix": "bun audit --fix",
    "lint": "biome check",
    "format": "biome format --write",
    "migrate:notion": "bunx tsx ../../scripts/migrate-notion-to-supabase.ts"
  },
  "dependencies": {
    "@cimantikos/config": "workspace:*",
    "@cimantikos/domain": "workspace:*",
    "@cimantikos/services": "workspace:*",
    "@ai-sdk/google": "latest",
    "@hono/node-server": "^1.19.4",
    "@mastra/core": "latest",
    "@mastra/pg": "latest",
    "@mastra/loggers": "latest",
    "@mastra/mcp": "latest",
    "@mastra/memory": "latest",
    "concurrently": "^9.2.1",
    "dotenv": "^16.4.5",
    "grammy": "^1.34.1",
    "pdf-parse": "^1.1.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.6",
    "mastra": "^0.13.2",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "jsondiffpatch": "^0.7.2",
    "nanoid": "^3.3.8"
  },
  "keywords": [
    "telegram",
    "bot",
    "invoice",
    "notion",
    "mastra",
    "clothing",
    "measurements"
  ],
  "author": "Cimantikós Clothing Company",
  "license": "MIT",
  "packageManager": "bun@latest"
}
